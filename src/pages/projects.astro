---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
---

<BaseLayout title="Projects - Your Name" description="Explore my portfolio of web development projects">
  <section class="section">
    <div class="container">
      <h1>Projects</h1>
      
      <div class="projects-list">
        {projects.map(project => (
          <div class="card project-item">
            <div class="project-header">
              <h3>{project.data.title}</h3>
              <div class="project-links">
                {project.data.githubUrl && (
                  <a href={project.data.githubUrl} target="_blank" rel="noopener noreferrer" class="link">
                    GitHub
                  </a>
                )}
                {project.data.liveUrl && (
                  <a href={project.data.liveUrl} target="_blank" rel="noopener noreferrer" class="link">
                    Live
                  </a>
                )}
              </div>
            </div>
            <p>{project.data.description}</p>
            <div class="tech-list">
              {project.data.technologies.join(' â€¢ ')}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .projects-list {
    margin-top: 48px;
  }

  .project-item {
    padding: 48px 0;
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 16px;
  }

  .project-header h3 {
    margin: 0;
    font-size: 20px;
    font-weight: 400;
  }

  .project-links {
    display: flex;
    gap: 16px;
  }

  .link {
    color: #666;
    text-decoration: none;
    font-size: 14px;
    font-weight: 300;
    transition: color 0.2s ease;
  }

  .link:hover {
    color: #1a1a1a;
  }

  .tech-list {
    color: #999;
    font-size: 14px;
    font-weight: 300;
    margin-top: 16px;
  }

  @media (max-width: 768px) {
    .project-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
    }

    .project-item {
      padding: 32px 0;
    }
  }
</style>