---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const featuredProjects = await getCollection('projects', ({ data }) => {
  return data.featured === true;
});

const latestPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

const sortedPosts = latestPosts.sort((a, b) => 
  new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
).slice(0, 3);
---

<BaseLayout title="Your Name - Portfolio">
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <h1>Your Name</h1>
        <p class="hero-description">
          Developer creating digital experiences with focus on simplicity and functionality.
        </p>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  <section class="section">
    <div class="container">
      <h2>Selected Work</h2>
      <div class="projects-list">
        {featuredProjects.map(project => (
          <div class="card project-item">
            <div class="project-header">
              <h3>{project.data.title}</h3>
              <div class="project-links">
                {project.data.githubUrl && (
                  <a href={project.data.githubUrl} target="_blank" rel="noopener noreferrer" class="link">
                    GitHub
                  </a>
                )}
                {project.data.liveUrl && (
                  <a href={project.data.liveUrl} target="_blank" rel="noopener noreferrer" class="link">
                    Live
                  </a>
                )}
              </div>
            </div>
            <p>{project.data.description}</p>
            <div class="tech-list">
              {project.data.technologies.join(' â€¢ ')}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Latest Blog Posts -->
  <section class="section">
    <div class="container">
      <h2>Recent Writing</h2>
      <div class="posts-list">
        {sortedPosts.map(post => (
          <div class="card post-item">
            <div class="post-header">
              <h3>
                <a href={`/blog/${post.slug}`} class="post-link">{post.data.title}</a>
              </h3>
              <time class="post-date">
                {new Intl.DateTimeFormat('en-US', { month: 'short', day: 'numeric', year: 'numeric' }).format(post.data.publishDate)}
              </time>
            </div>
            <p>{post.data.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    padding: 160px 0 120px;
  }

  .hero-content {
    max-width: 600px;
  }

  .hero h1 {
    font-size: 56px;
    font-weight: 300;
    margin-bottom: 32px;
    letter-spacing: -1.5px;
  }

  .hero-description {
    font-size: 18px;
    color: #666;
    line-height: 1.6;
    margin-bottom: 0;
  }

  .projects-list,
  .posts-list {
    margin-top: 48px;
  }

  .project-item,
  .post-item {
    padding: 48px 0;
  }

  .project-header,
  .post-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 16px;
  }

  .project-header h3,
  .post-header h3 {
    margin: 0;
    font-size: 20px;
    font-weight: 400;
  }

  .project-links {
    display: flex;
    gap: 16px;
  }

  .link {
    color: #666;
    text-decoration: none;
    font-size: 14px;
    font-weight: 300;
    transition: color 0.2s ease;
  }

  .link:hover {
    color: #1a1a1a;
  }

  .post-link {
    color: #1a1a1a;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .post-link:hover {
    color: #666;
  }

  .post-date {
    color: #999;
    font-size: 14px;
    font-weight: 300;
    white-space: nowrap;
  }

  .tech-list {
    color: #999;
    font-size: 14px;
    font-weight: 300;
    margin-top: 16px;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 120px 0 80px;
    }

    .hero h1 {
      font-size: 40px;
    }

    .project-header,
    .post-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
    }

    .project-item,
    .post-item {
      padding: 32px 0;
    }
  }
</style>