---
import BaseLayout from './BaseLayout.astro';
import { formatDate } from '../utils/formatDate';

export interface Props {
  frontmatter: {
    title: string;
    description: string;
    publishDate: Date;
    tags?: string[];
  };
}

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <article class="article">
    <div class="container">
      <header class="article-header">
        <h1>{frontmatter.title}</h1>
        <time class="article-date">
          {formatDate(frontmatter.publishDate)}
        </time>
      </header>
      
      <div class="prose">
        <slot />
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .article {
    padding: 120px 0;
  }

  .article-header {
    margin-bottom: 64px;
  }

  .article-header h1 {
    font-size: 40px;
    font-weight: 300;
    margin-bottom: 16px;
    letter-spacing: -0.5px;
  }

  .article-date {
    color: #999;
    font-size: 14px;
    font-weight: 300;
  }

  .prose {
    max-width: 680px;
    font-size: 16px;
    line-height: 1.7;
    font-weight: 300;
  }

  .prose h2, .prose h3, .prose h4 {
    margin-top: 48px;
    margin-bottom: 16px;
    color: #1a1a1a;
    font-weight: 400;
  }

  .prose h2 {
    font-size: 24px;
  }

  .prose h3 {
    font-size: 20px;
  }

  .prose p {
    margin-bottom: 24px;
    color: #333;
  }

  .prose ul, .prose ol {
    margin-bottom: 24px;
    padding-left: 20px;
  }

  .prose li {
    margin-bottom: 8px;
    color: #333;
  }

  .prose blockquote {
    border-left: 2px solid #e0e0e0;
    padding-left: 24px;
    margin: 32px 0;
    font-style: italic;
    color: #666;
  }

  .prose code {
    background: #f5f5f5;
    padding: 2px 6px;
    font-size: 14px;
    color: #666;
    font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
  }

  .prose pre {
    background: #f8f8f8;
    color: #333;
    padding: 24px;
    overflow-x: auto;
    margin: 32px 0;
    font-size: 14px;
    line-height: 1.5;
  }

  .prose pre code {
    background: none;
    padding: 0;
    color: inherit;
  }

  @media (max-width: 768px) {
    .article-header h1 {
      font-size: 32px;
    }

    .prose {
      font-size: 16px;
    }

    .prose h2 {
      font-size: 20px;
    }

    .prose h3 {
      font-size: 18px;
    }
  }
</style>