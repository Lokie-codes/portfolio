---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "A modern minimalist portfolio website" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&display=swap" rel="stylesheet">
  </head>
  <body>
    <nav class="nav">
      <div class="nav-container">
        <a href="/" class="logo">Portfolio</a>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/projects">Projects</a></li>
          <li><a href="/blog">Blog</a></li>
        </ul>
      </div>
    </nav>
    
    <main>
      <slot />
    </main>
    
    <footer class="footer">
      <div class="footer-container">
        <p>&copy; 2025 Your Name</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.6;
    color: #1a1a1a;
    background-color: #ffffff;
    font-weight: 300;
  }

  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid #f0f0f0;
    z-index: 100;
  }

  .nav-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 32px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 60px;
  }

  .logo {
    font-size: 16px;
    font-weight: 400;
    color: #1a1a1a;
    text-decoration: none;
    letter-spacing: 0.5px;
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 40px;
  }

  .nav-links a {
    color: #666;
    text-decoration: none;
    font-weight: 300;
    font-size: 14px;
    transition: color 0.2s ease;
    letter-spacing: 0.3px;
  }

  .nav-links a:hover {
    color: #1a1a1a;
  }

  main {
    margin-top: 60px;
    min-height: calc(100vh - 120px);
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 32px;
  }

  .section {
    padding: 120px 0;
  }

  h1, h2, h3, h4, h5, h6 {
    font-weight: 400;
    line-height: 1.2;
    margin-bottom: 24px;
    color: #1a1a1a;
  }

  h1 {
    font-size: 48px;
    font-weight: 300;
    letter-spacing: -1px;
  }

  h2 {
    font-size: 32px;
    font-weight: 300;
    letter-spacing: -0.5px;
  }

  h3 {
    font-size: 20px;
    font-weight: 400;
  }

  p {
    margin-bottom: 24px;
    color: #666;
    font-size: 16px;
    line-height: 1.7;
    font-weight: 300;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    padding: 12px 24px;
    background: #1a1a1a;
    color: white;
    text-decoration: none;
    font-weight: 300;
    font-size: 14px;
    letter-spacing: 0.3px;
    transition: all 0.2s ease;
    border: none;
    cursor: pointer;
  }

  .btn:hover {
    background: #333;
  }

  .btn-outline {
    background: transparent;
    color: #1a1a1a;
    border: 1px solid #e0e0e0;
  }

  .btn-outline:hover {
    border-color: #1a1a1a;
  }

  .card {
    background: white;
    padding: 40px 0;
    border-bottom: 1px solid #f0f0f0;
    transition: all 0.2s ease;
  }

  .card:last-child {
    border-bottom: none;
  }

  .grid {
    display: grid;
    gap: 0;
  }

  .footer {
    border-top: 1px solid #f0f0f0;
    padding: 40px 0;
  }

  .footer-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 32px;
    text-align: center;
  }

  .footer p {
    color: #999;
    font-size: 14px;
    margin: 0;
  }

  @media (max-width: 768px) {
    .nav-container {
      padding: 0 20px;
    }

    .nav-links {
      gap: 24px;
    }

    .container {
      padding: 0 20px;
    }

    h1 {
      font-size: 36px;
    }

    h2 {
      font-size: 24px;
    }

    .section {
      padding: 80px 0;
    }

    .card {
      padding: 32px 0;
    }
  }
</style>